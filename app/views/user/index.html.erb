<h1>Usuários:</h1>

<% if @users.empty? -%>
<b>Nenhum usuário encontrado</b>
<% else -%>
    <ul>
    <% @users.each do |user| -%>
        <li><b><%= link_to user.cn, {:action => 'show', :id => user} %>&nbsp;<%= user.sn %></b></li>
    <% end -%>
    </ul>
<% end -%>

<%= link_to 'New User', :action => 'new' %>
<br><br>
<%= link_to 'Back', :controller => 'welcome' %>
